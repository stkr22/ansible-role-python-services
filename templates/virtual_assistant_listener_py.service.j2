[Unit]
Description=Virtual Assistant Listener
After=network.target

[Service]
Type=simple
User=ubuntu
WorkingDirectory={{ python_project_wd }}
ExecStart={{ python_project_wd }}/.venv/bin/python {{ python_project_wd }}/src/virtual-assistant-listener/main.py {{ python_project_script_args }}
Restart=on-failure

[Install]
WantedBy=multi-user.target
